
@{
    ViewBag.Title = "Login";
}

@model RosMovies.Models.Account.UserLogin
@using (Html.BeginForm("Login", "User", FormMethod.Post, new { @class = "form-horizontal login-form" }))
            {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
    <div class="form-horizontal">
        <h4>Вход</h4>
        <hr />
        <div class="form-group">
            @Html.LabelFor(m => m.Login, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.Login, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.Login)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.Password)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input class="btn btn-default" type="submit" id="Login" name="Login" value="Войти" />
            </div>
        </div>
    </div>
        }



