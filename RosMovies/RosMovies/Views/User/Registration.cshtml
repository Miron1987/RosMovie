@model RosMovies.Models.User
@{
    ViewBag.Title = "Registration";
}


@using (Html.BeginForm("Registration", "User", FormMethod.Post, new { @class = "form-horizontal registration-form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="form-horizontal">
        <h4>Регистрация</h4>
        <hr />
        <div class="form-group">
            @Html.LabelFor(m => m.FirstName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.FirstName)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.LastName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.LastName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.LastName)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Mail, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-sm-8">
                @Html.EditorFor(m => m.Mail, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.Mail)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.Password)
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-12 form-input">
                <input class="btn btn-default" type="submit" id="Register" name="Register" value="Зарегистрироваться" />
            </div>
        </div>
        </div>
        }



