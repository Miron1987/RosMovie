@model RosMovies.Models.Movie

@{
    ViewBag.Title = "AddMovie";
}


<body>
    <div id="back-layer">
        @*@{Html.RenderAction("RenderHeader", "Home");}*@
        <section class="registration-index background-main">
            <div class="registration-box container">
                @using (Html.BeginForm("AddMovie", "Movie", FormMethod.Post, new { @class = "form-horizontal registration-form" }))
            {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <div class="form-group">
                        @Html.LabelFor(m => m.Name, new { @class = "col-sm-4 form-label" })
                        <div class="col-sm-8">
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-text" })
                        </div>
                        <div class="col-sm-offset-3 col-sm-9">
                            @Html.ValidationMessageFor(m => m.Name)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Director, new { @class = "col-sm-4 form-label" })
                        <div class="col-sm-8">
                            @Html.TextBoxFor(m => m.Director, new { @class = "form-text" })
                        </div>
                        <div class="col-sm-offset-3 col-sm-9">
                            @Html.ValidationMessageFor(m => m.Director)
                        </div>
                    </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Genre, new { @class = "col-sm-4 form-label" })
                            <div class="col-sm-8">
                                @Html.TextBoxFor(m => m.Genre, new { @class = "form-text" })
                            </div>
                            <div class="col-sm-offset-3 col-sm-9">
                                @Html.ValidationMessageFor(m => m.Genre)
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Actors, new { @class = "col-sm-4 form-label" })
                            <div class="col-sm-8">
                                @Html.PasswordFor(m => m.Actors, new { @class = "form-text" })
                            </div>
                            <div class="col-sm-offset-3 col-sm-8">
                                @Html.ValidationMessageFor(m => m.Actors)
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Description, new { @class = "col-sm-4 form-label" })
                            <div class="col-sm-8">
                                @Html.PasswordFor(m => m.Description, new { @class = "form-text" })
                            </div>
                            <div class="col-sm-offset-3 col-sm-8">
                                @Html.ValidationMessageFor(m => m.Description)
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12 form-input">
                                <input class="form-btn" type="submit" id="Register" name="Register" value="Зарегистрироваться" />
                            </div>
                        </div>
                    //@Html.AntiForgeryToken()
                }
            </div>
        </section>
        @*@{Html.RenderPartial("footer");}*@
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @Scripts.Render("~/bundles/jqueryval");

    </div>
</body>